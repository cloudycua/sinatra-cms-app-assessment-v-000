<h1>Add a New Recipe</h1>
<br>

<% unless locals.empty? %>
  <i><%= message %><br><br></i>
<% end %>

<form action="/recipes" method="POST">

  <p>Name: <input type="text" id="recipe_name" name="recipe[name]" placeholder="Recipe Name"></p></br>

  <h3>INGREDIENTS</h3>

    <% Ingredient.all.each do |i| %>
      &nbsp&nbsp&nbsp&nbsp
      <input type="checkbox" id="ingredient_<%= i.id %>" name="recipe[ingredient_ids][]" value="<%= i.id %>">
      <label><%= i.name %></label><br>
    <% end %>
    <br>
    &nbsp&nbsp&nbsp&nbsp
    <input type="text" id="new_ingredient_1" name="ingredient_1[name]" placeholder="Add a new ingredient">
    <br><br>
    &nbsp&nbsp&nbsp&nbsp
    <input type="text" id="new_ingredient_2" name="ingredient_2[name]" placeholder="Add a new ingredient">
    <br><br>
    &nbsp&nbsp&nbsp&nbsp
    <input type="text" id="new_ingredient_3" name="ingredient_3[name]" placeholder="Add a new ingredient">
    <br>

  <h3>DIRECTIONS</h3>
    &nbsp&nbsp&nbsp&nbsp
    <input type="text_area" id="recipe_directions" name="recipe[directions]" placeholder="Recipe Directions"></br>
    <br><br><br><br>

  <input type="submit" value="Submit">

</form>
