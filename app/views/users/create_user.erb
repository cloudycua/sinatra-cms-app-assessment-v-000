<h1>Recipe Database Sign Up</h1>

<% unless locals.empty? %>
  <%= message %>
<% end %>

<form action="/signup" method="POST">

  <p>Username: <input type="text" id="username" name="username"></p>
  <p>Password: <input type="text" id="password" name="password"></p>

  <input type="submit" value="Sign Up">

</form>
